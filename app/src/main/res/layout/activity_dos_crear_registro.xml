<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Ingresa el nombre del nuevo producto"
        android:id="@+id/crearNombreProducto"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el costo"
        android:layout_marginTop="40dp"
        android:id="@+id/crearCostoProducto"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el venta"
        android:layout_marginTop="40dp"
        android:id="@+id/crearVentaProducto"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Producto"
        android:layout_marginTop="40dp"
        android:layout_gravity="right"
        android:id="@+id/agregarRegistroBoton"/>

</LinearLayout>